[Unit]
Description=Checking the system after update/upgrade

[Service]
WorkingDirectory=%h/atomic_update
Type=oneshot

ExecStart=/usr/bin/bash -c '\
export ANSIBLE_LOG_PATH="{{ patch_user_logs }}/system_update_checker_$(date --iso-8601=seconds).log"; \
ansible-playbook system_update_checker.yml'

[Install]
WantedBy=default.target
